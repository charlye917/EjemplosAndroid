<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ForgotPasswordActivity"
    android:background="@color/colorPrimaryDark"
    android:focusableInTouchMode="true">

    <EditText
        android:id="@+id/editTextEmailForgot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_edit_text_height"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/edittext_rounded"
        android:hint="@string/login_email"
        android:inputType="textEmailAddress"
        android:textColorHint="@android:color/white"
        android:textSize="@dimen/login_text_size"
        android:paddingRight="@dimen/login_edit_text_space"
        android:paddingLeft="@dimen/login_edit_text_space"
        app:layout_constraintBottom_toTopOf="@+id/buttonForgot"
        app:layout_constraintEnd_toEndOf="@+id/buttonForgot"
        app:layout_constraintStart_toStartOf="@+id/buttonForgot"
         />

    <Button
        android:id="@+id/buttonForgot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_button_xl_height"
        android:layout_below="@+id/editTextEmailForgot"
        android:layout_alignStart="@+id/editTextEmailForgot"
        android:layout_alignEnd="@+id/editTextEmailForgot"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/button_ripple_lg"
        android:text="@string/login_sign_up"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/login_text_xl_size"
        app:layout_constraintBottom_toTopOf="@+id/buttonGoLoginForgot"
        app:layout_constraintEnd_toEndOf="@+id/buttonGoLoginForgot"
        app:layout_constraintStart_toStartOf="@+id/buttonGoLoginForgot"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonGoLoginForgot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_button_xl_height"
        android:layout_alignStart="@+id/buttonForgot"
        android:layout_alignEnd="@+id/buttonForgot"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_ripple"
        android:text="@string/login_go_login"
        android:textColor="@color/colorSecondaryText"
        android:textSize="@dimen/login_text_size"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>